<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/material_background"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="10dp">

    <ImageView
        android:id="@+id/loginView"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:src="@drawable/ic_account_circle_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/loginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:layout_alignTop="@+id/loginView"
        android:layout_toRightOf="@+id/loginView"
        android:layout_toEndOf="@+id/loginView"
        android:layout_alignBottom="@+id/loginView"
        android:paddingLeft="7dp"
        android:gravity="center" />

</RelativeLayout>